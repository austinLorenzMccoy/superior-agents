# AutoTradeX Environment Configuration

# CoinGecko MCP Configuration
COINGECKO_API_KEY=your_api_key_here
COINGECKO_ENVIRONMENT=pro  # pro or demo
MCP_BASE_URL=https://mcp.api.coingecko.com  # or http://localhost:3000 for local MCP server

# Groq LLM Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192

# Qdrant Vector Database
QDRANT_URL=https://your-qdrant-instance.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Trading Configuration
MAX_POSITION_SIZE=0.1
RISK_FACTOR=0.03
DEFAULT_SYMBOL=bitcoin

# Logging Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
